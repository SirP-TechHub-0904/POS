@page
@model POS.Pages.POS_page.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<div class="table-responsive">
    <table id="example" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>S/N</th>
                <th>
                    @Html.DisplayNameFor(model => model.PosTask[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PosTask[0].Date)
                </th>
                <th>
                    Total Transaction
                </th>


                <th></th>
            </tr>
        </thead>
        @{int sn = 0;}
        <tbody>
            @foreach (var item in Model.PosTask)
            {
                <tr>
                    <td>
                        @{sn++;}
                        @sn
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @item.Activities.Count()
                    </td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-danger">Details</a>
                        <a asp-page="./Analysis" asp-route-id="@item.Id" class="btn btn-danger">Analysis</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<a asp-page="Statistics" class="btn btn-primary">FInancial Statistics</a>
