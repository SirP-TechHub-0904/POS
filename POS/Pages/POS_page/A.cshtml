@page
@model POS.Pages.POS_page.AModel

@{
    ViewData["Title"] = "A";
}

<h1>A</h1>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Activity[0].Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Activity[0].TransactionType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Activity[0].Amount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Activity[0].moniepointCharge)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Activity[0].CityCharge)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Activity[0].Task)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Activity)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TransactionType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.moniepointCharge)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CityCharge)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Task.Id)
                    </td>
                    <td>
                        <a asp-page="./EditA" asp-route-id="@item.Id">Edit</a> |

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
